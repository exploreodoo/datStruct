<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>     
    <template id="report_contract_document">            
        <div class="page" style="border:1px solid black;">
            <div class="row text-center" style="border-bottom:1px solid black;  margin-left:0px; margin-right:0px;">
              <h3><strong>KIMBO Sales Contract</strong></h3>
            </div>
            <br/>                
            <div class="row" style="margin-left:0px;">
              <div  style="font-size:15px">
                  Date:<span t-if="o.date"><span t-field="o.date"/></span>   
              </div>
            </div>            
            <br/>
            <div class="row"  style="margin-left:0px;">
              <div style="font-size:15px">
                Name of the Organisation/Person: <span t-if="o.partner_id"><span t-field="o.partner_id.name"/></span>   
              </div>
            </div>
            <br/>
            <strong>Personal Details</strong>
            <br/>
            <div class="row" style="margin-left:0px;">
              <div  style="font-size:15px">
                Nationality:<span t-if="o.country_id"><span t-field="o.country_id.name"/></span>   
              </div>
            </div>
            <div class="row" style="margin-left:0px;">
              <div  style="font-size:15px">
                 Passport Number: <span t-if="o.passport_no"><span t-field="o.passport_no"/></span>   
               </div>
            </div>
            <div class="row"    style="margin-left:0px;">
              <div  style="font-size:15px">
                Mobile: <span t-if="o.mobile"><span t-field="o.mobile"/></span>   
              </div>
            </div>
            <div class="row"  style="margin-left:0px;">
              <div  style="font-size:15px">
                Address: <span t-if="o.partner_id">
                <span t-field="o.address"/>
                <span t-field="o.address1"/>
                <span t-field="o.city"/>          
                </span>    
              </div>
            </div>
            <div class="row" style="margin-left:0px;">
              <div  style="font-size:15px">
                Email : <span t-if="o.email"><span t-field="o.email"/></span>   
              </div>
            </div>
            <div class="row"  style="margin-left:0px;">
              <div  style="font-size:15px">
                Emirates ID:<span t-if="o.emirates_id"><span t-field="o.emirates_id"/></span>   
             </div>
            </div>   
            <br/>       
            <div class="row" style="margin-left:0px; ">
              <div   style="font-size:15px" >
                <strong>Contact details Home Country</strong> 
              </div>
            </div>
            <br/>
            <div class="row" style="margin-left:0px;">
              <div  style="font-size:15px">
                Name : <span t-if="o.int_reference1"><span t-field="o.int_reference1"/></span>   
             </div>
           </div>     

            <div class="row" style="margin-left:0px;">
            	<div  style="font-size:15px">
          		  Mobile: <span t-if="o.ph_no_int2"><span t-field="o.ph_no_int2"/></span>   
              </div>
            </div>
            <div class="row" style="margin-left:0px;" >
            	<div  style="font-size:15px">
          		  Address: <span t-if="o.contact_address_international1"><span t-field="o.contact_address2"/></span>    
              </div>
            </div>
            <br/>
            <div class="row" style="margin-left:0px;">
              <div style="font-size:15px">
                 <strong>Date of Contract Begin:</strong> <span t-if="o.date"><span t-field="o.date"/></span>   
             </div>
            </div>
             <div class="row" style="margin-left:0px;">
              <div  style="font-size:15px">
                <strong>Date of Contract Ends:</strong> <span t-if="o.date_end"><span t-field="o.date_end"/></span>   
             </div>
           </div>
           <br/>
           <div class="row" style="margin-left:0px;">
        	   <div  style="font-size:15px">
        		    Select Items in the Contract    
             </div>
            </div>
            <div class="row" style="margin-left:0px; ">
              <div  style="font-size:15px">
                ***********Frees Items Under Plan***********
              </div>
            </div>
            <div class="row" style="margin-left:0px;" t-foreach="o.free_items" t-as="item">
              	<div  style="font-size:15px">
              		<span t-field="item.name"/> : <span t-field="item.product_id.name"/>
                 </div>
            </div>
            <br/>
            <div class="row" style="margin-left:0px;">
            	<div style="font-size:15px">
            		<strong>Business Transaction Details</strong>
               </div>
            </div>

            <table class="table table-condensed">
              <thead>
                <tr>
                  <th>Delivery Details</th>
                  <th>Delivery Date</th>
                  <th>Invoice Date</th>
                  <th>Amount</th>
                  <th>Payment Date</th>
                </tr>
              </thead>
              <tbody class="sale_tbody">
                <tr t-foreach="o.get_delivery_details()" t-as="l">
                  <td>
                     <span t-esc="l.get('name')"/>
                  </td>
                  <td>
                      <span t-esc="l.get('date')"/>
                  </td>
                  <td>
                      <span t-esc="l.get('date')"/>
                  </td>
                  <td>
                      <span t-esc="l.get('amount')"/>
                  </td>
                  <td>
                      <span t-esc="l.get('date')"/>
                  </td>
                </tr>
              </tbody>
            </table>

            <div class="row" style="margin-left:0px;">
              <div style="font-size:15px">
        		    <strong>AMC yes/No</strong>
              </div>
            </div>
            <div class="row" style="margin-left:0px;">
              <div style="font-size:15px">
            		if AMC included then Enter the amount , It should affect AMC earning account 
                       A place/option to enter visiting dates <br/>
                       if AMC not included while attempting for AMC service invoice should be raised<br/>
              </div>
            </div>
          
            <table class="table table-condensed">              
                <tr>
                  <td><strong>Buyer</strong></td>
                  <td><strong>Seller</strong></td>
                </tr>            
            </table>         
        </div>                  
    </template>

  <template id="report_loan_contract1">
      <t t-call="report.html_container">
          <t t-foreach="doc_ids" t-as="doc_id">
              <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'DatStruct.report_contract_document')"/>
          </t>
      </t>
  </template>

  </data>
</openerp>
