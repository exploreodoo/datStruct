                                <field name= 'partner_id'/>
                                <field name= 'company_name'/>
                                <field name= 'address'/>
                                <field name= 'address1'/>
                                <field name='city'/>
                                <field name='state_id'/>
                                <field name='country_id'/>
                               
                            </group>
                             <group> 
                                <field name= 'type' invisible='1'/>  
